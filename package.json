{
  "name": "careloop",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "clean": "turbo clean && rimraf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.0"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
